# GitHub Trending Reporter 配置文件
# 说明：# 开头为注释，参数值无需加引号

# === 1. 项目获取配置 ===
LANGUAGE=""                    # 过滤语言（如 python、javascript，留空=所有语言）
TIME_RANGE="monthly"            # 时间范围：daily（日榜）、weekly（周榜）、monthly（月榜）、yearly（年榜）、triennial（三年榜）
COUNT=15                        # 获取项目数量（建议 10-30）
GITHUB_TOKEN=""  # GitHub Token（https://github.com/settings/tokens 获取，需 repo 权限）

# === 2. 报告生成配置 ===
REPORT_TITLE="热门项目报告"  # 报告标题
REPORT_PATH="./.github-trending/reports"  # 报告保存路径
INCLUDE_README=true            # 报告是否包含项目 README 摘要
INCLUDE_STATS=true             # 报告是否包含语言统计表格

# === 3. Git 自动提交配置 ===
AUTO_COMMIT=true              # 是否自动提交报告到 Git 仓库
GIT_REPO_PATH="https://github.com/3ziye/github-trending.git"  # Git 仓库路径
GIT_BRANCH="main"
GIT_COMMIT_MSG="📊 Update GitHub trending report: $(date +%Y-%m-%d)"

# === 6. 日志配置 ===
LOG_LEVEL="INFO"               # 日志级别：DEBUG、INFO、WARN、ERROR
LOG_PATH="./.github-trending/logs"
LOG_RETENTION_DAYS=30          # 日志保留天数
